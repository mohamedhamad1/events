<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<div class="container">
    <div class="row mt-4">
        <div class="col-md-9 offset-md-1">
            <h1 class="display-4">Edit Event:</h1>
            <hr>
            <%- include('../partials/flshMessages.ejs') %>
            <form action="/events/edit/<%= id %>" method="post">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" class="form-control" value="<%= title %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="description" rows="4" class="form-control"><%= description %></textarea>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input type="text" name="location" id="location" class="form-control" value="<%= location %>">
                </div>
                <div class="form-group">
                    <label for="date">Date</label>
                    <input type="date" name="date" id="date" class="form-control" value="<%= date %>">
                </div>
                <div class="form-group mt-2">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a href="/events/<%= id %>" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer') -%>
<%- include('../partials/header.ejs') %>
<div class="container">
    <% userChunk.forEach(col => { %>
        <div class="row mt-3">
            <% col.forEach(user => { %>
                <div class="col-sm-6 col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <img src="/images/<%= user.avatar %>" class="profile-photo" alt="Profile Image" style="width: 70px; height: 70px; border-radius: 15px;">
                                    </div>
                                    <div class="col-sm-9">
                                        <h6 class="display-6"><%= user.username %></h6>
                                    </div>
                                </div>
                                <hr>
                                <%= user.username %>
                                <% if (user._id == locals.user.id) { %>
                                    <i style="color: gray;">(me)</i>
                                <% } %>
                            </h5>
                            <p class="card-text">Email: <%= user.email %></p>
                            <p class="card-text">Role: <%= user.role %></p>
                            <a href="/users/admin-panel/makeAdmin/<%= user._id %>" class="btn btn-dark">Make admin</a>
                            <a href="/users/admin-panel/deleteUsers/<%= user._id %>" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    <% }) %>
    <div class="row">
        <div class="col-12 mt-2 mb-4">
            <nav aria-label="...">
                <ul class="pagination pagination-md justify-content-center">
                    <% for( let i = 1; i <= Math.ceil(userCount/userLimit); i++ ) { %>
                        <li class="page-item">
                            <% if (i == userPage) { %>
                                <span class="page-link active"><%= i %></span>
                            <% } else { %>
                                <a class="page-link" href="/users/admin-panel?userPage=<%= i %>"><%= i %></a>
                            <% } %>
                        </li>
                    <% } %>
                </ul>
            </nav>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>